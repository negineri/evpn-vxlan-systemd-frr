<?xml version="1.0" encoding="utf-8"?>
<policy target="CONTINUE">
  <rule family="ipv6">
    <icmp-type name="destination-unreachable"/>
    <accept/>
  </rule>
  <rule family="ipv6">
    <icmp-type name="packet-too-big"/>
    <accept/>
  </rule>
  <rule family="ipv6">
    <icmp-type name="time-exceeded"/>
    <accept/>
  </rule>
  <rule family="ipv6">
    <icmp-type name="parameter-problem"/>
    <accept/>
  </rule>
  <rule family="ipv6">
    <icmp-type name="echo-request"/>
    <accept/>
  </rule>
  <rule family="ipv6">
    <icmp-type name="router-solicitation"/>
    <accept/>
  </rule>
  <rule family="ipv6">
    <icmp-type name="router-advertisement"/>
    <accept/>
  </rule>
  <rule family="ipv6">
    <icmp-type name="neighbour-solicitation"/>
    <accept/>
  </rule>
  <rule family="ipv6">
    <icmp-type name="neighbour-advertisement"/>
    <accept/>
  </rule>
  <rule>
    <tcp-mss-clamp value="pmtu"/>
  </rule>
  <ingress-zone name="ANY"/>
  <egress-zone name="ANY"/>
</policy>
